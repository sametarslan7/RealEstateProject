
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Project Details</title>
    <link rel="stylesheet" href="~/estate/project.css">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar">
        <ul>
            <li><a href="/MainPAge/Index">Home</a></li>
            <li><a href="#" class="active">Projects</a></li>
            <li><a href="index.html#listings">Listings</a></li>
            <li><a href="contact.html">Contact</a></li>
        </ul>
    </nav>

    <!-- Project Details Section -->
    <section class="project-details" id="project-details">
        <div class="project-card">
            <img src="~/estate/imgs/project.jpg" alt="Project Image">
            <div class="project-info">
                <h2>Project Title</h2>
                <p>This is a detailed description of the project. It includes the project's goals, objectives, and other important information that provides the visitor with a comprehensive understanding of the project.</p>
            </div>
        </div>
    </section>

    <!-- Contact Section -->
    <section class="contact">
        @Html.Action("Office", "MainPage")
        @Html.Action("Contact", "MainPage")
        <div class="company-logo">
            <img src="../../estate/imgs/logo.jpg" alt="Company Logo">
        </div>
    </section>
</body>
</html>

