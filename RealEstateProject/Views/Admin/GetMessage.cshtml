@model RealEstateProject.Models.Classes.Message

@{
    ViewBag.Title = "GetMessage";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


@using (Html.BeginForm("UpdateMessage", "Admin", FormMethod.Post))
{
    <main>
        <header>
            <h1><i class="fas fa-user-plus"></i> New Admin </h1>
        </header>

        <div class="container">
            <form method="post">
                <div class="form-group">
                    <label for="Id">ID</label>
                    @Html.TextBoxFor(x => x.messageId, new { @class = "form-control", @id = "Id", @readonly = "readonly" })
                    @*<input type="text" class="form-control" id="adminName" placeholder="Enter name" required>*@
                </div>
                <div class="form-group">
                    <label for="fullName">Name</label>
                    @Html.TextBoxFor(x => x.fullName, new { @class = "form-control", @id = "fullName", @readonly = "readonly" })
                    @*<input type="text" class="form-control" id="adminName" placeholder="Enter name" required>*@
                </div>
                <div class="form-group">
                    <label for="phoneNumber">Phone Number</label>
                    @Html.TextBoxFor(x => x.phoneNumber, new { @class = "form-control", @id = "phoneNumber", @readonly = "readonly" })
                    @*<input type="text" class="form-control" id="adminName" placeholder="Enter name" required>*@
                </div>
                <div class="form-group">
                    <label for="email">E-Mail</label>
                    @Html.TextBoxFor(x => x.email, new { @class = "form-control", @id = "email", @readonly = "readonly" })
                    @*<input type="text" class="form-control" id="adminName" placeholder="Enter name" required>*@
                </div>
                <div class="form-group">
                    <label for="message">Message</label>
                    @Html.TextBoxFor(x => x.message, new { @class = "form-control", @id = "message", @readonly = "readonly" })
                    @*<input type="text" class="form-control" id="adminSurname" placeholder="Enter surname" required>*@
                </div>
                <div class="form-group">
                    <label for="messageDetail">Message Detail</label>
                    @Html.TextBoxFor(x => x.messageDetail, new { @class = "form-control", @id = "messageDetail", @placeHolder = "Enter message detail" })
                    @*<input type="text" class="form-control" id="adminNickname" placeholder="Enter username" required>*@
                </div>
                <button type="submit" class="btn btn-primary">Update Message</button>
            </form>
        </div>
    </main>

}