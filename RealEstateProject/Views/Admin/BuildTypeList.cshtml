@using RealEstateProject.Models.Classes
@model List<BuildType>
@{
    ViewBag.Title = "BuildTypeList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<main>

    <!-- Fuel Types -->
    <header>
        <h1><i class="fas fa-home"></i> Build Type</h1>

    </header>
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Build Type </th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                <!-- Example Data Entries -->
                @foreach (var x in Model)
                {
                    <tr>
                        <td>@x.buildTypeid</td>
                        <td>@x.buildType</td>
                        <td>
                            <a href="/Admin/GetBuildType/@x.buildTypeid" class="btn btn-warning btn-sm">
                                <i class="fas fa-edit"></i> Update
                            </a>
                            <a href="/Admin/DeleteBuildType/@x.buildTypeid" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
    <!-- Add New Fuel Type -->
    <div class="addnewbutton">
        <a class="btn btn-info" href="~/Admin/NewBuildType">
            Add New Build Type
        </a>
    </div>
</main>

