@using RealEstateProject.Models.Classes
@model List<BuildViewModel>
@{
    ViewBag.Title = "BuildList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<main>
    <!-- Brands -->
    <header>
        <h1><i class="fas fa-building"></i> Builds</h1>
    </header>
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Title</th>
                    <th scope="col">Price</th>
                    <th scope="col">Year</th>
                    <th scope="col">City</th>
                    <th scope="col">District</th>
                    <th scope="col">Status</th>
                    <th scope="col">Type</th>
                    <th scope="col">Build Description</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                <!-- Example Data Entries -->
                @foreach (var x in Model)
                {
                    <tr>
                        <td>@x.Build.buildId</td>
                        <td>@x.Build.buildTitle</td>
                        <td>$ @x.Build.buildPrice</td>
                        <td>@x.Build.buildYear</td>
                        <td>@x.Build.buildCity</td>
                        <td>@x.Build.buildDistrict</td>
                        <td>@x.Build.buildStatus</td>
                        <td>@x.BuildTypeName</td>
                        <td>@x.Build.buildDescription</td>
                        <td>
                            <a href="/Admin/GetBuild/@x.Build.buildId" class="btn btn-warning btn-sm">
                                <i class="fas fa-edit"></i> Update
                            </a>
                            <a href="/Admin/DeleteBuild/@x.Build.buildId" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
    <!-- New Admin Add -->
    <div class="addnewbutton">
        <a class="btn btn-info" href="~/Admin/NewBuild">Add New Build</a>
    </div>
</main>