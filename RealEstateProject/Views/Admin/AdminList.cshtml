@using RealEstateProject.Models.Classes
@model List<Admin>
@{
    ViewBag.Title = "AdminList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<main>
    <header>
        <h1><i class="fas fa-user-shield"></i> Adminler</h1>
    </header>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Name</th>
                    <th scope="col">Surname</th>
                    <th scope="col">Nickname</th>
                    <th scope="col">Email</th>
                    <th scope="col">Password</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                <!-- Example Data Entries   -->
                @foreach (var x in Model)
                {
                    <tr>
                        <td>@x.Id</td>
                        <td>@x.name</td>
                        <td>@x.surname</td>
                        <td>@x.nickanme</td>
                        <td>@x.email</td>
                        <td>@x.password</td>
                        <td>
                            <a href="/Admin/GetAdmin/@x.Id" class="btn btn-warning btn-sm">
                                <i class="fas fa-edit"></i> Update
                            </a>
                            <a href="/Admin/DeleteAdmin/@x.Id" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }


            </tbody>
        </table>
    </div>
    <!-- New Admin Add -->
    <div class="addnewbutton">
        <a class="btn btn-info" href="~/Admin/NewAdmin">
            Add New Admin
        </a>
    </div>
</main>