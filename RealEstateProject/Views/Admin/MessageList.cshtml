@using RealEstateProject.Models.Classes
@model List<Message>

@{
    ViewBag.Title = "MessageList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<main>
    <!-- Contacts  -->
    <header>
        <h1><i class="fas fa-phone"></i> Contacts</h1>
    </header>
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Name</th>
                    <th scope="col">Phone Number</th>
                    <th scope="col">Message</th>
                    <th scope="col">Message Detail</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var x in Model)
                {
                    <tr>
                        <td>@x.messageId</td>
                        <td>@x.fullName</td>
                        <td>@x.phoneNumber</td>
                        <td>@x.message</td>
                        <td>@x.messageDetail</td>
                        <td>
                            <a href="/Admin/GetMessage/@x.messageId" class="btn btn-warning btn-sm">
                                <i class="fas fa-edit"></i> Update
                            </a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</main>

