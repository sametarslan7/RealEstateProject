@model RealEstateProject.Models.Classes.Contact
@{
    ViewBag.Title = "GetContact";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("UpdateContact", "Admin", FormMethod.Post))
{
    <main>
        <header>
            <h1><i class="fas fa-briefcase"></i> New Office</h1>
        </header>

        <div class="container">
            <form method="post">
                <div class="form-group">
                    <label for="contactId">ID</label>
                    @Html.TextBoxFor(x => x.contactId, new { @class = "form-control", @id = "contactId", @readonly = "readonly" })
                    @*<input type="text" class="form-control" id="officeCity" placeholder="Enter office city" required>*@
                </div>
                <div class="form-group">
                    <label for="phoneNumber">Phone Number</label>
                    @Html.TextBoxFor(x => x.phoneNumber, new { @class = "form-control", @id = "phoneNumber", @placeholder = "Enter phone number" })
                    @*<input type="text" class="form-control" id="officeCity" placeholder="Enter office city" required>*@
                </div>
                <div class="form-group">
                    <label for="emailAdress">E-mail Adress</label>
                    @Html.TextBoxFor(x => x.emailAdress, new { @class = "form-control", @id = "emailAdress", @placeholder = "Enter email adress " })
                    @*<input type="text" class="form-control" id="officeCity" placeholder="Enter office city" required>*@
                </div>
                <div class="form-group">
                    <label for="faxNumber">Fax Number</label>
                    @Html.TextBoxFor(x => x.faxNumber, new { @class = "form-control", @id = "faxNumber", @placeholder = "Enter fax number " })
                    @*<input class="form-control" id="officeFullAdress" rows="3" placeholder="Enter office full adress" required></input>
            </div>*@
                    <br />
                    <button type="submit" class="btn btn-primary">Update Contact</button>
            </form>
        </div>
    </main>
}

