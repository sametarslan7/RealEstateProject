@using RealEstateProject.Models.Classes
@model List<BuildViewModel>
@{
    ViewBag.Title = "ImageList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<main>
    <!-- Cars -->
    <header>
        <h1><i class="fas fa-car"></i> Images</h1>
    </header>
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Name</th>
                    <th scope="col">Photos</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                <!-- Example Data Entries -->
                @foreach (var x in Model)
                {
                    <tr>
                        <td>@x.Build.buildId</td>
                        <td>@x.Build.buildTitle</td>
                        <td>
                            <div class="photos-container">
                                @foreach (var y in x.Images)
                                {
                                    <img src="@y.imageUrl" alt="Car Photo" width="100" height="100">
                                }

                            </div>
                        </td>
                        <td>
                            <a href="/Admin/GetImage/@x.Build.buildId" class="btn btn-warning btn-sm">
                                <i class="fas fa-edit"></i> Update
                            </a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</main>

